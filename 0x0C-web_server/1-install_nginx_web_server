#!/usr/bin/env bash
# This script installs Nginx and sets up a custom page with "Hello World!" text

# Update package index
sudo apt-get update -y

# Install Nginx using apt-get
sudo apt-get install nginx -y

# Create or modify the index.html file in Nginx's default directory
echo "Hello World!" | sudo tee /var/www/html/index.nginx-debian.html

# Start the Nginx service without using systemctl (using service command)
sudo service nginx start
